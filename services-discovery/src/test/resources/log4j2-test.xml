<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout>
        <pattern>%level{length=1} %date{MMdd-HHmm:ss,SSS} %logger{1.} %message [%thread]%n</pattern>
      </PatternLayout>
    </Console>
  </Appenders>

  <Loggers>
    <Logger level="info" name="io.netty"/>
    <Logger level="info" name="reactor.netty"/>
    <Logger level="info" name="io.scalecube.transport"/>
    <Logger level="info" name="io.scalecube.cluster"/>
    <Logger level="info" name="io.scalecube.services"/>

    <Root level="info">
      <AppenderRef ref="console"/>
    </Root>
  </Loggers>

</Configuration>
