<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <artifactId>scalecube-services-parent</artifactId>

  <dependencies>
    <!-- Test scope -->
    <dependency>
      <artifactId>junit-jupiter-engine</artifactId>
      <groupId>org.junit.jupiter</groupId>
      <scope>test</scope>
      <version>${junit.version}</version>
    </dependency>
    <dependency>
      <artifactId>junit-jupiter-params</artifactId>
      <groupId>org.junit.jupiter</groupId>
      <scope>test</scope>
      <version>${junit.version}</version>
    </dependency>
    <dependency>
      <artifactId>mockito-junit-jupiter</artifactId>
      <groupId>org.mockito</groupId>
      <scope>test</scope>
      <version>${mockito.version}</version>
    </dependency>
    <dependency>
      <artifactId>hamcrest-all</artifactId>
      <groupId>org.hamcrest</groupId>
      <scope>test</scope>
      <version>${hamcrest.version}</version>
    </dependency>
    <dependency>
      <artifactId>hamcrest-core</artifactId>
      <groupId>org.hamcrest</groupId>
      <scope>test</scope>
      <version>${hamcrest.version}</version>
    </dependency>
    <dependency>
      <artifactId>reactor-test</artifactId>
      <groupId>io.projectreactor</groupId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <dependencyManagement>

    <dependencies>
      <!-- Scalecube commons -->
      <dependency>
        <artifactId>scalecube-commons</artifactId>
        <groupId>io.scalecube</groupId>
        <version>${scalecube-commons.version}</version>
      </dependency>

      <!-- Scalecube cluster -->
      <dependency>
        <artifactId>scalecube-cluster</artifactId>
        <groupId>io.scalecube</groupId>
        <version>${scalecube-cluster.version}</version>
      </dependency>

      <!-- Scalecube Config -->
      <dependency>
        <artifactId>config</artifactId>
        <groupId>io.scalecube</groupId>
        <version>${scalecube-config.version}</version>
      </dependency>

      <!-- Reactor -->
      <dependency>
        <artifactId>reactor-bom</artifactId>
        <groupId>io.projectreactor</groupId>
        <scope>import</scope>
        <type>pom</type>
        <version>${reactor.version}</version>
      </dependency>

      <!-- Logging -->
      <dependency>
        <artifactId>slf4j-api</artifactId>
        <groupId>org.slf4j</groupId>
        <version>${slf4j.version}</version>
      </dependency>
      <dependency>
        <artifactId>log4j-slf4j-impl</artifactId>
        <groupId>org.apache.logging.log4j</groupId>
        <version>${log4j.version}</version>
      </dependency>
      <dependency>
        <artifactId>log4j-core</artifactId>
        <groupId>org.apache.logging.log4j</groupId>
        <version>${log4j.version}</version>
      </dependency>
      <!-- Disruptor -->
      <dependency>
        <artifactId>disruptor</artifactId>
        <groupId>com.lmax</groupId>
        <version>${disruptor.version}</version>
      </dependency>

      <!-- RSocket -->
      <dependency>
        <artifactId>rsocket-core</artifactId>
        <groupId>io.rsocket</groupId>
        <version>${rsocket.version}</version>
      </dependency>
      <dependency>
        <artifactId>rsocket-transport-netty</artifactId>
        <groupId>io.rsocket</groupId>
        <version>${rsocket.version}</version>
      </dependency>

      <!-- Jackson -->
      <dependency>
        <artifactId>jackson-core</artifactId>
        <groupId>com.fasterxml.jackson.core</groupId>
        <version>${jackson.version}</version>
      </dependency>
      <dependency>
        <artifactId>jackson-databind</artifactId>
        <groupId>com.fasterxml.jackson.core</groupId>
        <version>${jackson.version}</version>
      </dependency>
      <dependency>
        <artifactId>jackson-datatype-jsr310</artifactId>
        <groupId>com.fasterxml.jackson.datatype</groupId>
        <version>${jackson.version}</version>
      </dependency>

      <!-- Protostuff/Protobuf -->
      <dependency>
        <artifactId>protostuff-api</artifactId>
        <groupId>io.protostuff</groupId>
        <version>${protostuff.version}</version>
      </dependency>
      <dependency>
        <artifactId>protostuff-core</artifactId>
        <groupId>io.protostuff</groupId>
        <version>${protostuff.version}</version>
      </dependency>
      <dependency>
        <artifactId>protostuff-collectionschema</artifactId>
        <groupId>io.protostuff</groupId>
        <version>${protostuff.version}</version>
      </dependency>
      <dependency>
        <artifactId>protostuff-runtime</artifactId>
        <groupId>io.protostuff</groupId>
        <version>${protostuff.version}</version>
      </dependency>

      <!-- Netty -->
      <dependency>
        <artifactId>reactor-netty</artifactId>
        <groupId>io.projectreactor.netty</groupId>
        <version>${reactor-netty.version}</version>
      </dependency>
      <dependency>
        <artifactId>netty-common</artifactId>
        <groupId>io.netty</groupId>
        <version>${netty.version}</version>
      </dependency>
      <dependency>
        <artifactId>netty-buffer</artifactId>
        <groupId>io.netty</groupId>
        <version>${netty.version}</version>
      </dependency>

      <!-- Scalecube benchmarks -->
      <dependency>
        <artifactId>scalecube-benchmarks-api</artifactId>
        <groupId>io.scalecube</groupId>
        <version>${scalecube-benchmarks.version}</version>
      </dependency>
      <dependency>
        <artifactId>scalecube-benchmarks-log4j2</artifactId>
        <groupId>io.scalecube</groupId>
        <version>${scalecube-benchmarks.version}</version>
      </dependency>

      <!-- Codahale -->
      <dependency>
        <artifactId>metrics-core</artifactId>
        <groupId>io.dropwizard.metrics</groupId>
        <version>${metrics.version}</version>
      </dependency>

      <!-- JCTools -->
      <dependency>
        <artifactId>jctools-core</artifactId>
        <groupId>org.jctools</groupId>
        <version>${jctools.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <modelVersion>4.0.0</modelVersion>
  <modules>
    <module>services-api</module>
    <module>services-transport-parent</module>
    <module>services-discovery</module>
    <module>services-bytebuf-codec</module>
    <module>services</module>
    <module>services-benchmarks</module>
    <module>services-examples-parent</module>
  </modules>

  <name>ScaleCube</name>
  <packaging>pom</packaging>

  <parent>
    <artifactId>scalecube-parent-pom</artifactId>
    <groupId>io.scalecube</groupId>
    <version>0.0.19</version>
  </parent>

  <pluginRepositories>
    <pluginRepository>
      <id>oss.jfrog</id>
      <name>plugins-release</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>https://oss.jfrog.org/artifactory/plugins-release</url>
    </pluginRepository>
    <pluginRepository>
      <id>central</id>
      <name>bintray-plugins</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>http://jcenter.bintray.com</url>
    </pluginRepository>
  </pluginRepositories>

  <properties>
    <disruptor.version>3.4.2</disruptor.version>
    <hamcrest.version>1.3</hamcrest.version>
    <jackson.version>2.9.9</jackson.version>
    <jctools.version>2.1.2</jctools.version>
    <jsr305.version>3.0.2</jsr305.version>
    <junit.version>5.1.1</junit.version>
    <log4j.version>2.11.0</log4j.version>
    <metrics.version>3.1.2</metrics.version>
    <mockito.version>2.24.5</mockito.version>
    <netty.version>4.1.36.Final</netty.version>
    <protostuff.version>1.6.0</protostuff.version>
    <reactor-netty.version>0.8.8.RELEASE</reactor-netty.version>
    <reactor.version>Californium-SR8</reactor.version>
    <rsocket.version>0.12.2-RC4</rsocket.version>
    <scalecube-benchmarks.version>1.2.2</scalecube-benchmarks.version>
    <scalecube-cluster.version>2.3.1</scalecube-cluster.version>
    <scalecube-commons.version>1.0.1</scalecube-commons.version>
    <scalecube-config.version>0.3.11</scalecube-config.version>
    <slf4j.version>1.7.7</slf4j.version>
  </properties>

  <repositories>
    <repository>
      <id>oss.jfrog</id>
      <name>jfrog</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>https://oss.jfrog.org/libs-release</url>
    </repository>
    <repository>
      <id>bintray</id>
      <name>bintray</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>http://jcenter.bintray.com</url>
    </repository>
    <repository>
      <id>central</id>
      <name>central</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>http://repo1.maven.org</url>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:git@github.com:scalecube/scalecube-services.git</connection>
    <developerConnection>scm:git:git@github.com:scalecube/scalecube-services.git
    </developerConnection>
    <tag>HEAD</tag>
    <url>https://github.com/scalecube/scalecube-services</url>
  </scm>

  <version>2.7.2-SNAPSHOT</version>

</project>
